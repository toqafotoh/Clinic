@model IEnumerable<Clinic.Domain.Entities.Doctor>
@{
    ViewData["Title"] = "Doctors";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-badge"></i> Doctors</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Add New Doctor
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Clinic</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DoctorId</td>
                    <td>@item.Name</td>
                    <td>@item.Clinic?.Name</td>
                    <td class="text-end table-actions">
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Details" asp-route-id="@item.DoctorId" class="btn btn-info">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.DoctorId" class="btn btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.DoctorId" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>