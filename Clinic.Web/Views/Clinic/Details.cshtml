@model Clinic.Domain.Entities.Clinic
@{
    ViewData["Title"] = "Clinic Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="bi bi-building"></i> Clinic Details
                </h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Clinic ID:</dt>
                    <dd class="col-sm-9">@Model.ClinicId</dd>

                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>
                </dl>

                <div class="mt-4">
                    <h5>Doctors in this Clinic:</h5>
                    @if (Model.Doctors != null && Model.Doctors.Any())
                    {
                        <ul class="list-group">
                            @foreach (var doctor in Model.Doctors)
                            {
                                <li class="list-group-item">@doctor.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No doctors assigned to this clinic yet.
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.ClinicId" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>