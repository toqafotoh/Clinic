<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #f8f9fa;
            padding-bottom: 60px;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            margin-bottom: 0;
        }

        .navbar-brand {
            color: white !important;
            font-weight: bold;
        }

        .nav-link {
            color: rgba(255,255,255,.9) !important;
        }

            .nav-link:hover {
                color: white !important;
            }

        .main-container {
            width: 100%;
            max-width: 100%;
            padding: 20px;
            margin: 0;
        }

        .alert {
            margin: 20px;
        }

        .table-actions {
            white-space: nowrap;
            width: 150px;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
            border: none;
            margin-bottom: 20px;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0,0,0,.125);
            font-weight: 600;
        }

        .card-body {
            flex: 1;
        }

        /* Dashboard Cards - Make them equal size */
        .dashboard-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .dashboard-card {
            padding: 30px;
            border-radius: 10px;
            color: white;
            text-decoration: none;
            transition: transform 0.2s, box-shadow 0.2s;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-height: 180px;
            position: relative;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0,0,0,.2);
                color: white;
            }

            .dashboard-card h3 {
                font-size: 1.5rem;
                margin-bottom: 10px;
                font-weight: 600;
            }

            .dashboard-card p {
                font-size: 1rem;
                opacity: 0.95;
                margin-bottom: 0;
            }

            .dashboard-card i {
                font-size: 3rem;
                position: absolute;
                right: 20px;
                top: 50%;
                transform: translateY(-50%);
                opacity: 0.3;
            }

            .dashboard-card.clinics {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            }

            .dashboard-card.doctors {
                background: linear-gradient(135deg, #06A77D 0%, #00C9A7 100%);
            }

            .dashboard-card.patients {
                background: linear-gradient(135deg, #00B4DB 0%, #0083B0 100%);
            }

            .dashboard-card.appointments {
                background: linear-gradient(135deg, #F7971E 0%, #FFD200 100%);
            }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 60px;
            line-height: 60px;
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
            text-align: center;
        }

        .dropdown-menu {
            background-color: white;
        }

        .dropdown-item {
            color: #212529;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
            }

        /* Ensure consistent card sizing in rows */
        .row .card {
            height: 100%;
        }

        /* Quick Actions Buttons */
        .quick-actions {
            margin-top: 30px;
        }

            .quick-actions .btn {
                width: 100%;
                padding: 15px;
                font-size: 1.1rem;
                border: 2px solid;
                background-color: white;
                transition: all 0.3s;
            }

                .quick-actions .btn:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 4px 8px rgba(0,0,0,.15);
                }

                .quick-actions .btn i {
                    margin-right: 8px;
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-hospital fs-4"></i> Clinic Management
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="clinicDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-building"></i> Clinic
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Clinic" asp-action="Index">Clinics</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Doctor" asp-action="Index">Doctors</a></li>
                            <li><a class="dropdown-item" asp-controller="DoctorSchedule" asp-action="Index">Schedules</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Patient" asp-action="Index">
                            <i class="bi bi-people"></i> Patients
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="appointmentDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-calendar-check"></i> Appointments
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Appointment" asp-action="Index">All Appointments</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Appointment" asp-action="CreateSlot">Create Slot</a></li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="BookAppointment">Book Appointment</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="navbar-text">
                    <i class="bi bi-clock"></i> @DateTime.Now.ToString("HH:mm")
                </div>
            </div>
        </div>
    </nav>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="main-container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container-fluid">
            <span class="text-muted">&copy; 2024 Clinic Management System</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script> 
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>