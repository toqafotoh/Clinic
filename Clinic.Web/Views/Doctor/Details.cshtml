@model Clinic.Domain.Entities.Doctor
@{
    ViewData["Title"] = "Doctor Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="bi bi-person-badge"></i> Doctor Details
                </h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Doctor ID:</dt>
                    <dd class="col-sm-9">@Model.DoctorId</dd>

                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Clinic:</dt>
                    <dd class="col-sm-9">@Model.Clinic?.Name</dd>
                </dl>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Schedule</h6>
                            </div>
                            <div class="card-body">
                                @if (Model.Schedules != null && Model.Schedules.Any())
                                {
                                        <ul class="list-group list-group-flush">
                                        @foreach (var schedule in Model.Schedules)
                                        {
                                                    <li class="list-group-item">
                                                @schedule.DayOfWeek: @schedule.StartTime.ToString(@"hh\:mm") - @schedule.EndTime.ToString(@"hh\:mm")
                                                    </li>
                                        }
                                        </ul>
                                }
                                else
                                {
                                        <p class="text-muted">No schedule defined</p>
                                }
                                <a asp-controller="DoctorSchedule" asp-action="Create" class="btn btn-sm btn-outline-primary mt-2">
                                    <i class="bi bi-plus"></i> Add Schedule
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Upcoming Appointments</h6>
                            </div>
                            <div class="card-body">
                                @if (Model.Appointments != null && Model.Appointments.Any(a => a.AppointmentDate >= DateTime.Today))
                                {
                                        <ul class="list-group list-group-flush">
                                        @foreach (var appointment in Model.Appointments.Where(a => a.AppointmentDate >= DateTime.Today).Take(5))
                                        {
                                                    <li class="list-group-item">
                                                @appointment.AppointmentDate.ToString("MMM dd"): @appointment.StartTime.ToString(@"hh\:mm")
                                                @if (appointment.Patient != null)
                                                {
                                                                <span class="badge bg-primary float-end">@appointment.Patient.Name</span>
                                                }
                                                else
                                                {
                                                                <span class="badge bg-success float-end">Available</span>
                                                }
                                                    </li>
                                        }
                                        </ul>
                                }
                                else
                                {
                                        <p class="text-muted">No upcoming appointments</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.DoctorId" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="Appointment" asp-action="CreateSlot" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create Slot
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>