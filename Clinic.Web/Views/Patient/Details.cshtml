@model Clinic.Domain.Entities.Patient
@{
    ViewData["Title"] = "Patient Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="bi bi-person-circle"></i> Patient Details
                </h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Patient ID:</dt>
                    <dd class="col-sm-9">@Model.PatientId</dd>

                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Birth Date:</dt>
                    <dd class="col-sm-9">@Model.BirthDate.ToString("MMMM dd, yyyy")</dd>

                    <dt class="col-sm-3">Age:</dt>
                    <dd class="col-sm-9">@Model.Age years old</dd>
                </dl>

                <div class="mt-4">
                    <h5>Appointment History:</h5>
                    @if (Model.Appointments != null && Model.Appointments.Any())
                    {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Doctor</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var appointment in Model.Appointments.OrderByDescending(a => a.AppointmentDate))
                                    {
                                                <tr>
                                                    <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd")</td>
                                                    <td>@appointment.StartTime.ToString(@"hh\:mm")</td>
                                                    <td>@appointment.Doctor?.Name</td>
                                                    <td>
                                                @if (appointment.AppointmentDate < DateTime.Today)
                                                {
                                                                <span class="badge bg-secondary">Completed</span>
                                                }
                                                else
                                                {
                                                                <span class="badge bg-primary">Upcoming</span>
                                                }
                                                    </td>
                                                </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                    }
                    else
                    {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> No appointment history found.
                            </div>
                    }
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.PatientId" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="Home" asp-action="BookAppointment" class="btn btn-primary">
                            <i class="bi bi-calendar-plus"></i> Book Appointment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>