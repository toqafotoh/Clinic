@model Clinic.Domain.Entities.DoctorSchedule
@{
    ViewData["Title"] = "Delete Schedule";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Delete Schedule
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5><i class="bi bi-exclamation-triangle-fill"></i> Warning!</h5>
                    <p>You are about to delete this schedule. This action cannot be undone.</p>
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Schedule ID:</dt>
                    <dd class="col-sm-8">@Model.DoctorScheduleId</dd>

                    <dt class="col-sm-4">Doctor:</dt>
                    <dd class="col-sm-8">@Model.Doctor?.Name</dd>

                    <dt class="col-sm-4">Day:</dt>
                    <dd class="col-sm-8">@Model.DayOfWeek</dd>

                    <dt class="col-sm-4">Time:</dt>
                    <dd class="col-sm-8">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="DoctorScheduleId" />

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Schedule
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>