@model IEnumerable<Clinic.Domain.Entities.Appointment>
@{
    ViewData["Title"] = "Appointments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-calendar-check"></i> Appointments</h2>
    <div>
        <a asp-action="CreateSlot" class="btn btn-primary me-2">
            <i class="bi bi-plus-circle"></i> Create Slot
        </a>
        <a asp-controller="Home" asp-action="BookAppointment" class="btn btn-success">
            <i class="bi bi-calendar-plus"></i> Book Appointment
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Doctor</th>
                <th>Patient</th>
                <th>Date</th>
                <th>Time</th>
                <th>Duration</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AppointmentId</td>
                    <td>@item.Doctor?.Name</td>
                    <td>@(item.Patient?.Name ?? "Available")</td>
                    <td>@item.AppointmentDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.StartTime.ToString(@"hh\:mm")</td>
                    <td>@item.VisitDuration min</td>
                    <td>
                        @if (item.PatientId == null)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">Booked</span>
                        }
                    </td>
                    <td class="text-end table-actions">
                        <div class="btn-group btn-group-sm" role="group">
                            @if (item.PatientId == null)
                            {
                                <a asp-action="Book" asp-route-id="@item.AppointmentId" class="btn btn-success">
                                    <i class="bi bi-calendar-check"></i> Book
                                </a>
                            }
                            else
                            {
                                <a asp-action="Details" asp-route-id="@item.AppointmentId" class="btn btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                            }
                            <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>