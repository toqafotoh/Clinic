@model Clinic.Domain.Entities.Appointment
@{
    ViewData["Title"] = "Book Appointment";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Book Appointment</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Doctor:</dt>
                    <dd class="col-sm-8">@Model.Doctor?.Name</dd>

                    <dt class="col-sm-4">Date:</dt>
                    <dd class="col-sm-8">@Model.AppointmentDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4">Time:</dt>
                    <dd class="col-sm-8">@Model.StartTime.ToString(@"hh\:mm")</dd>

                    <dt class="col-sm-4">Duration:</dt>
                    <dd class="col-sm-8">@Model.VisitDuration minutes</dd>
                </dl>

                <form asp-action="Book">
                    <input type="hidden" name="id" value="@Model.AppointmentId" />

                    <div class="mb-3">
                        <label for="patientId" class="form-label">Select Patient</label>
                        <select name="patientId" class="form-select" required>
                            <option value="">-- Select Patient --</option>
                            @foreach (var patient in ViewBag.Patients)
                            {
                                <option value="@patient.PatientId">@patient.Name</option>
                            }
                        </select>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-calendar-check"></i> Book Appointment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>