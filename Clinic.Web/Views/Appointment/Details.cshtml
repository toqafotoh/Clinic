@model Clinic.Domain.Entities.Appointment
@{
    ViewData["Title"] = "Appointment Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="bi bi-calendar-check"></i> Appointment Details
                </h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Appointment ID:</dt>
                    <dd class="col-sm-9">@Model.AppointmentId</dd>

                    <dt class="col-sm-3">Doctor:</dt>
                    <dd class="col-sm-9">@Model.Doctor?.Name</dd>

                    <dt class="col-sm-3">Patient:</dt>
                    <dd class="col-sm-9">
                        @if (Model.Patient != null)
                        {
                            @Model.Patient.Name
                        }
                        else
                        {
                                <span class="text-muted">Available slot</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Date:</dt>
                    <dd class="col-sm-9">@Model.AppointmentDate.ToString("dddd, MMMM dd, yyyy")</dd>

                    <dt class="col-sm-3">Time:</dt>
                    <dd class="col-sm-9">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</dd>

                    <dt class="col-sm-3">Duration:</dt>
                    <dd class="col-sm-9">@Model.VisitDuration minutes</dd>

                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        @if (Model.PatientId == null)
                        {
                                <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                                <span class="badge bg-primary">Booked</span>
                        }
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>